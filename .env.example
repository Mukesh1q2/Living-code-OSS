# Environment Configuration
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Database Configuration
DATABASE_URL=sqlite:///./vidya.db
REDIS_URL=redis://localhost:6379

# AI Service Configuration
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Local AI Models
LOCAL_MODEL_PATH=./models
ENABLE_LOCAL_INFERENCE=true

# Sanskrit Engine Configuration
SANSKRIT_DATA_PATH=./data
SUTRA_RULES_PATH=./sutra_rules

# Performance Configuration
MAX_WORKERS=4
CACHE_TTL=3600
ENABLE_CACHING=true

# Security Configuration
SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9000
ENABLE_TRACING=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Cloud Configuration (for production)
CLOUD_PROVIDER=aws
AWS_REGION=us-west-2
AWS_S3_BUCKET=vidya-storage
AWS_CLOUDWATCH_LOG_GROUP=/aws/lambda/vidya

# Kubernetes Configuration
KUBERNETES_NAMESPACE=vidya
KUBERNETES_SERVICE_ACCOUNT=vidya-service-account

# Feature Flags
ENABLE_QUANTUM_EFFECTS=true
ENABLE_NEURAL_NETWORK=true
ENABLE_VOICE_INTERACTION=false
ENABLE_VR_MODE=false