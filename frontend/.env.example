# Sanskrit Rewrite Engine Frontend Environment Configuration

# Backend API Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000

# Development Settings
REACT_APP_DEBUG=true
REACT_APP_LOG_LEVEL=debug

# Feature Flags
REACT_APP_ENABLE_WEBSOCKETS=true
REACT_APP_ENABLE_MONACO_EDITOR=true

# Optional: Custom backend endpoints
# REACT_APP_API_URL=http://your-backend-server:8000
# REACT_APP_WS_URL=ws://your-backend-server:8000

# Optional: Production settings
# REACT_APP_DEBUG=false
# REACT_APP_LOG_LEVEL=error