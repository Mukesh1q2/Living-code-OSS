{
  "name": "quantum-sanskrit-ai",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "next dev -p 3002",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:comprehensive": "vitest run lib/__tests__/comprehensive-unit-tests.test.ts",
    "test:integration": "vitest run lib/__tests__/integration-tests.test.ts",
    "test:visual": "vitest run lib/__tests__/visual-regression-tests.test.ts",
    "test:performance": "vitest run lib/__tests__/performance-tests.test.ts",
    "test:e2e": "vitest run lib/__tests__/end-to-end-tests.test.ts",
    "test:all": "vitest run lib/__tests__/test-runner.ts",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:ci": "vitest run --reporter=verbose --coverage",
    "test:quality": "npm run test:comprehensive && npm run test:integration && npm run test:performance",
    "test:regression": "npm run test:visual && npm run test:e2e",
    "test:debug": "vitest run --reporter=verbose --no-coverage"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "@react-three/drei": "^9.122.0",
    "@react-three/fiber": "^8.18.0",
    "class-variance-authority": "^0.7.1",
    "framer-motion": "^11.2.6",
    "leva": "^0.9.35",
    "lottie-react": "^2.4.0",
    "next": "^15.4.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^3.1.2",
    "three": "^0.160.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^14.3.1",
    "@types/node": "^20",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/three": "^0.160.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/ui": "^0.34.7",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.4.7",
    "jsdom": "^22.1.0",
    "stats.js": "^0.17.0",
    "typescript": "^5",
    "vitest": "^0.34.6"
  }
}
